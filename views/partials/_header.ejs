<% if (locals.user) { %>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand" href="/">Rubiks</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="/times">Past Times</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/times/metrics">Metrics</a>
      </li>
    </ul>
    <ul class="navbar-nav">
        <li class="nav-item mr-1">
            <span class="navbar-text text-light"><%= user.username %></span>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
        </li>
    </ul>
  </div>
</nav>
<% } %>
<% for (const notice of locals.flash.notices) { %>
<div class="fixed-top alert alert-success alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
<div>
<% } %>
<% for (const warning of locals.flash.warnings) { %>
<div class="fixed-top alert alert-danger alert-dismissible fade show" role="alert">
    <%= warning %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
<div>
<% } %>
